generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id            Int            @id @default(autoincrement())
  lcpCode       String         @unique
  name          String
  capTotal      Float          @default(0)
  expTotal      Float          @default(0)
  status        ProjectStatus  @default(CERRADO)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  reals         Real[]
  comprometidos Comprometido[]
}

model Real {
  id             Int      @id @default(autoincrement())
  projectId      Int
  expDescription String
  purchaseOrder  String
  amount         Float    @default(0)
  currency       String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id])

  @@index([projectId])
}

model Comprometido {
  id          Int       @id @default(autoincrement())
  projectId   Int
  descripcion String
  refDoc      String
  amount      Float     @default(0)
  currency    String
  docDate     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  project Project @relation(fields: [projectId], references: [id])

  @@index([projectId])
}

enum ProjectStatus {
  ABIERTO
  CERRADO
  TECO
}
