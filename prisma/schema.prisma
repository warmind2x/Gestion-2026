generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id        Int      @id @default(autoincrement())
  lcpCode   String   @unique
  name      String
  capTotal  Float    @default(0)
  expTotal  Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
