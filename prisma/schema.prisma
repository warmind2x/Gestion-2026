generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id          Int      @id @default(autoincrement())
  lcpCode     String
  name        String
  description String?
  amount      Float
  currency    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
